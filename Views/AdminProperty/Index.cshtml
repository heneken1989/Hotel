@model IEnumerable<RoomProperty>
@{
    ViewData["Title"] = "Room Property Index";
}

<<div class="container" style="min-height:100vh">
<h1>Trang bị phòng</h1>
<p>
    <a asp-action="Create">Tạo Property</a>
</p>
<table id="table_property" class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>Tên</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(a=>item.Id)</td>
                <td>
                    @Html.DisplayFor(a=>item.Name)
                </td>
        

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
