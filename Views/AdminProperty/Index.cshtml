@model IEnumerable<RoomProperty>
@{
    ViewData["Title"] = "Room Property Index";
}

<h1 class="text-center">Mô Tả Phòng</h1>
<div class="container" style="min-height:100vh;background-color:white;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; padding:1rem;padding-bottom:1rem">
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

<p>
    <a asp-action="Create" class="btn btn-warning" role="button">Tạo Property</a>
</p>
<table id="table_property" class="table table-hover table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">
                Id
            </th>
                <th class="text-center">Tên</th>
                <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                    <td class="text-center">@Html.DisplayFor(a=>item.Id)</td>
                    <td class="text-center">
                    @Html.DisplayFor(a=>item.Name)
                </td>
        

                    <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info" role="button">Sửa</a> |

                    <button asp-action="Delete" data-id="@item.Id" class="btn btn-danger">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
