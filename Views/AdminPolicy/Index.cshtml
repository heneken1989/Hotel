@model IEnumerable<RoomPolicy>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="min-height:100vh">
    <h1 class="mb-3">Quản lý chính sách phòng</h1>
    @if (TempData.ContainsKey("success"))
    {
        <div class="alert alert-success">
            @TempData["success"]
        </div>
    }

    @if (TempData.ContainsKey("error"))
    {
        <div class="alert alert-danger">
            @TempData["error"]
        </div>
    }
    <a asp-action="Create" asp-controller="AdminPolicy">Tạo chính sách mới</a>

    <table id="banner_table" class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nội dung</th>
                <th>Hành động</th>

               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(a=>item.Id)</td>
                    <td>@Html.DisplayFor(a=>item.Content)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |

                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


