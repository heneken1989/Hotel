
<div class="hero-wrap" style="background-image: url('@Url.Content("~/images/HP.png")');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
				
                    <h1 class="mb-4 bread">Rooms</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section bg-light" style="padding-top:50px">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="col-lg-12" style="display:flex;flex-direction:column;justify-content:center;align-items:center">
							@foreach (var r in ViewBag.RoomList.Items)
						{

					<div class=" ftco-animate col-lg-12"  >
							<div class="room col-lg-12" style="display:flex;justify-content:space-between;align-items:center;background-color:white;aspect-ratio:2.5;border:0.2rem solid #ccc;padding:0;">
									@foreach(var rimg in r.Images)
							{
									var img = $"~/images/{rimg.Url}";
								<a href="/SingleRoom" class="img d-flex justify-content-center align-items-center " style="height:100%;width:60%;" >
										<img src="@Url.Content(img)" alt="@img" style="width:100%;height:100%;object-fit:cover"/>
									
								</a>
							}
								<div class="text p-3 text-center" style="flex-grow:2">
									<h2 class="mb-3"><a href="/SingleRoom" style="font-size:35px;font-weight:bold">@r.RoomType.Type</a></h2>

                                  @* Price *@
									@if (ViewBag.RoomProList != null)
									{
										foreach (var pro in ViewBag.RoomProList.Items)
										{
											if (pro.Name == "Giá Phòng")
											{
												foreach (var de in pro.Details)
													if (@de.RoomId == r.Id)
													{
														<p><span class="price mr-2">@de.Detail</span><span class="per"></span></p>
													}
											}
										}


										<ul class="list">
											@foreach (var pro in ViewBag.RoomProList.Items)
											{
												if (pro.Name != "Giá Phòng")
												{
													foreach (var de in pro.Details)
													{
														if (@de.RoomId == r.Id)
														{
															<li><span>@pro.Name : </span>@de.Detail</li>
														}
													}
												}
											}
										</ul>

										<hr>
										<p class="pt-1"><a asp-action="Index" asp-controller="SingleRoom" asp-route-id="@r.Id" class="btn-custom">Book Now <span class="icon-long-arrow-right"></span></a></p>
									}
								</div>
							</div>
			
					</div>
					}
				</div>
				
			</div>
		</div>
	</div>
</section>